"{Н} deletes if prev {H} isn't h"
%{Н%}:0 <=> [ %{H%}: - :һ ] %{I%}: _ ;

"vowels delete before {A}{A}"
Vx:0 <=> _ %>: %{A%}: %{A%}: ;
         _ RealVow: %>: %{A%}: %{A%}: ;
     except
         .#. :Cons (:ь) _ ;
         .#. :Cons (:ь) RealVow: _ ;
         .#. RealVow: _ ;
         .#. _ ;
     where Vx in RealVow ;

!@ с ы л д ь ы:0 >:0 {A}:а {A}:а ч ч {I}:ы

!"some stem-final consonants delete in passive after {y}"
